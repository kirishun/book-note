.write-header
  .write-container
    .write-title
      = link_to root_path do
        = icon('fas', 'book', class: 'mypage-icon')
        Book Note!

.single-main
  .login-single-container
    .login-single-head
      アカウントをお持ちの方はこちら
      .user-newsession
        = link_to new_user_session_path do
          ログイン
    = form_for(resource, as: resource_name, url: registration_path(resource_name),class: "login-single-innner") do |f|
      .login-single-content
        .form-group
          = f.text_field :name, autofocus: true, placeholder: "ニックネーム",required: "required", class: 'login-input-default'
        .form-group
          = f.text_field :email, autofocus: true, placeholder: "メールアドレス",required: "required", class: 'login-input-default'
        .form-group
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード",required: "required", class: "login-input-default"
        .form-group
          = f.submit "アカウント作成", class: "user-login"

.write-footer
  .write-container
    .write-title
      = link_to root_path do
        = icon('fas', 'book', class: 'mypage-icon')
        Book Note!